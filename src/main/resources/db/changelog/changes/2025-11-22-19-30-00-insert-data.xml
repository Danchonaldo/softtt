<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- 4) Fill in the countries table -->
    <changeSet id="insert-countries" author="admin">
        <insert tableName="countries">
            <column name="name" value="USA"/>
            <column name="code" value="US"/>
        </insert>
        <insert tableName="countries">
            <column name="name" value="Germany"/>
            <column name="code" value="DE"/>
        </insert>
        <insert tableName="countries">
            <column name="name" value="Japan"/>
            <column name="code" value="JP"/>
        </insert>
    </changeSet>

    <!-- 5) Fill the items table -->
    <changeSet id="insert-items" author="admin">
        <insert tableName="items">
            <column name="name" value="iPhone 15"/>
            <column name="price" value="1000"/>
            <column name="quantity" value="50"/>
            <column name="manufacturer_id" value="1"/> <!-- USA -->
        </insert>
        <insert tableName="items">
            <column name="name" value="BMW X5"/>
            <column name="price" value="60000"/>
            <column name="quantity" value="10"/>
            <column name="manufacturer_id" value="2"/> <!-- Germany -->
        </insert>
        <insert tableName="items">
            <column name="name" value="Sony PlayStation 5"/>
            <column name="price" value="500"/>
            <column name="quantity" value="100"/>
            <column name="manufacturer_id" value="3"/> <!-- Japan -->
        </insert>
    </changeSet>
</databaseChangeLog>